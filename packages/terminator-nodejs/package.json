{
  "author": "mediar-ai",
  "bugs": {
    "url": "https://github.com/mediar-ai/terminator/issues"
  },
  "dependencies": {
    "esbuild": "^0.25.11"
  },
  "description": "Node.js/TypeScript bindings for the Terminator Rust library (via napi-rs)",
  "devDependencies": {
    "@napi-rs/cli": "^2.18.4"
  },
  "engines": {
    "node": ">= 10"
  },
  "homepage": "https://github.com/mediar-ai/terminator",
  "keywords": [
    "napi",
    "rust",
    "native",
    "terminator",
    "automation",
    "desktop",
    "gui",
    "ui",
    "testing",
    "windows",
    "macos",
    "linux"
  ],
  "main": "wrapper.js",
  "name": "@mediar-ai/terminator",
  "napi": {
    "name": "terminator",
    "triples": {
      "additional": [
        "aarch64-apple-darwin",
        "aarch64-pc-windows-msvc"
      ]
    }
  },
  "optionalDependencies": {
    "@mediar-ai/terminator-darwin-arm64": "0.21.0",
    "@mediar-ai/terminator-darwin-x64": "0.21.0",
    "@mediar-ai/terminator-linux-x64-gnu": "0.21.0",
    "@mediar-ai/terminator-win32-arm64-msvc": "0.21.0",
    "@mediar-ai/terminator-win32-x64-msvc": "0.21.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mediar-ai/terminator"
  },
  "scripts": {
    "artifacts": "npx napi artifacts",
    "build": "npm run sync-version && npm run build:wrapper && npx napi build --platform --release --strip",
    "build:debug": "npm run sync-version && npm run build:wrapper && npx napi build --platform",
    "build:wrapper": "npx esbuild wrapper.ts --outfile=wrapper.js --platform=node --format=cjs --target=es2020",
    "prepublish:ci": "npm run sync-version && npm run build:wrapper",
    "prepublishOnly": "npm run sync-version && npm run build:wrapper && npx napi prepublish -t npm",
    "sync-version": "node scripts/sync-version.js",
    "test": "node tests/element-chaining.test.js",
    "test-hook": "powershell.exe -ExecutionPolicy Bypass -File \"../../.git/hooks/pre-push.ps1\""
  },
  "types": "wrapper.d.ts",
  "version": "0.21.1"
}
